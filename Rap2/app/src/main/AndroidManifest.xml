<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pregrado.rap2">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.pregrado.triviapp.Activity_Principal"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.pregrado.triviapp.Activity_Juego" />
        <activity android:name="com.example.pregrado.triviapp.Activity_Registro" />
        <activity
            android:name="com.example.pregrado.triviapp.Activity_Login"
            android:label="@string/title_activity_pantalla__login" />
        <activity android:name="com.example.pregrado.triviapp.Activity_Estadistica"></activity>
    </application>

</manifest>